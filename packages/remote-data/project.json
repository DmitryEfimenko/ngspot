{
  "name": "remote-data",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/remote-data/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/remote-data",
        "main": "packages/remote-data/src/index.ts",
        "tsConfig": "packages/remote-data/tsconfig.lib.json",
        "assets": [
          "packages/remote-data/*.md"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs {args.tag} {args.verbose}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/remote-data/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/remote-data"
      ],
      "options": {
        "jestConfig": "packages/remote-data/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    }
  },
  "tags": [
    "lib:remote-data"
  ]
}
