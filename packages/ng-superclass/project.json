{
  "name": "ng-superclass",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ng-superclass/src",
  "prefix": "ngspot",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/packages/ng-superclass"],
      "options": {
        "project": "packages/ng-superclass/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/ng-superclass/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/ng-superclass/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/ng-superclass"],
      "options": {
        "jestConfig": "packages/ng-superclass/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/ng-superclass/**/*.ts",
          "packages/ng-superclass/**/*.html"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs {args.tag} {args.verbose}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    }
  },
  "tags": ["lib", "lib:ng-superclass"]
}
