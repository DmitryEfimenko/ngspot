{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "prettier", "import", "jasmine"],
  "overrides": [
    {
      "settings": {
        "import/resolver": {
          "typescript": {
            "project": "./tsconfig.base.json"
          }
        }
      },
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "app:demo",
                "onlyDependOnLibsWithTags": [
                  "lib:demo",
                  "lib:common",
                  "lib:ng-superclass",
                  "lib:ng-superclass-material"
                ]
              },
              {
                "sourceTag": "lib:remote-data-rx",
                "onlyDependOnLibsWithTags": ["lib:remote-data"]
              },
              {
                "sourceTag": "lib:ng-superclass-material",
                "onlyDependOnLibsWithTags": ["lib:ng-superclass"]
              },
              {
                "sourceTag": "lib:demo",
                "onlyDependOnLibsWithTags": ["lib:common", "lib"]
              },
              {
                "sourceTag": "lib:common",
                "onlyDependOnLibsWithTags": [
                  "lib:rxjs",
                  "lib:table-of-contents"
                ]
              },
              {
                "sourceTag": "lib:table-of-contents",
                "onlyDependOnLibsWithTags": ["lib:rxjs"]
              }
            ]
          }
        ],
        "@typescript-eslint/no-unused-vars": [
          "error",
          { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
        ],
        "import/order": [
          "error",
          {
            "groups": [
              "builtin",
              "external",
              "internal",
              "parent",
              "sibling",
              "index",
              "object",
              "type"
            ],
            "newlines-between": "always",
            "pathGroupsExcludedImportTypes": ["@angular"],
            "pathGroups": [
              {
                "pattern": "@angular/**",
                "group": "external",
                "position": "before"
              }
            ],
            "alphabetize": {
              "order": "asc",
              "caseInsensitive": true
            }
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.html"],
      "extends": [
        "plugin:@angular-eslint/template/recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "@angular-eslint/template/attributes-order": [
          "error",
          {
            "alphabetical": false,
            "order": [
              "STRUCTURAL_DIRECTIVE",
              "TEMPLATE_REFERENCE",
              "ATTRIBUTE_BINDING",
              "INPUT_BINDING",
              "OUTPUT_BINDING",
              "TWO_WAY_BINDING"
            ]
          }
        ]
      }
    },
    {
      "files": ["*.spec.js", "*.spec.jsx", "*.spec.ts", "*.spec.tsx"],
      "extends": ["plugin:jasmine/recommended"],
      "rules": {}
    }
  ]
}
