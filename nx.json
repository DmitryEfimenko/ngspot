{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/core.json",
  "release": {
    "groups": {
      "expandable-input": {
        "projects": ["expandable-input"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "ngx-errors": {
        "projects": ["ngx-errors"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "ngx-errors-material": {
        "projects": ["ngx-errors-material"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "ng-superclass": {
        "projects": ["ng-superclass"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "ng-superclass-material": {
        "projects": ["ng-superclass-material"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "remote-data": {
        "projects": ["remote-data"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "remote-data-rx": {
        "projects": ["remote-data-rx"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "route-path-builder": {
        "projects": ["route-path-builder"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "rxjs": {
        "projects": ["rxjs"],
        "releaseTagPattern": "{projectName}-{version}"
      },
      "view-transition": {
        "projects": ["view-transition"],
        "releaseTagPattern": "{projectName}-{version}"
      }
    },
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}-{version}",
    "version": {
      "preVersionCommand": "npx nx run-many -t build",
      "generatorOptions": {
        "packageRoot": "dist/packages/{projectName}/package",
        "currentVersionResolver": "registry"
      }
    },
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github",
        "renderOptions": {
          "authors": false,
          "commitReferences": true,
          "versionTitleDate": true
        }
      }
    }
  },
  "generators": {
    "@nx/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "none",
      "e2eTestRunner": "cypress"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "none"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.[jt]s",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/karma.conf.js",
      "!{projectRoot}/.eslintrc.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/karma.conf.js"],
      "cache": true
    },
    "@nx/eslint:lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    },
    "@nx/angular:ng-packagr-lite": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  },
  "defaultProject": "demo",
  "nxCloudAccessToken": "Y2FmYWYyM2MtYTE4YS00M2I4LTk4ZDgtZWQ0ZWRjMzVjYjNifHJlYWQtd3JpdGU=",
  "useInferencePlugins": false,
  "defaultBase": "main"
}
